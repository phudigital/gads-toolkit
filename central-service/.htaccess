# Google Ads Toolkit Central Service - Security Configuration

# Deny direct access to config.php
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

# Deny access to sensitive files (logs, data, config)
<FilesMatch "\.(log|txt|json|dat)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Enable CORS for API endpoints (if needed)
<IfModule mod_headers.c>
    # Allow specific origins (update in production)
    # Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, X-API-Key"
</IfModule>

# Prevent directory listing
Options -Indexes

# Enable rewrite engine for clean URLs (optional)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /gads-toolkit/
    
    # Redirect to HTTPS (uncomment in production)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>
